

<%= link_to 'New article', new_article_path %>
<br />

<h1>Listing Articles</h1>
  <% @articles.each do |article| %>
      <h3><%= article.title %></h3>
      <p><%= article.text %></p>
      <h5><%= link_to 'Show', article_path(article) %> || <%= link_to 'Edit', edit_article_path(article) %> || <%= link_to 'Destroy', article_path(article),
      method: :delete,
      data: { confirm: 'Are you sure?' } %></h5>
      <%= '-' * 15 %> 

  <% end %>
